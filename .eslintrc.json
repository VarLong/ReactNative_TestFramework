{
    "extends": [
        "eslint:recommended",
        "plugin:wdio/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-undef":"error",
        "getter-return": "error",
        "no-dupe-args":"error",
        "no-dupe-keys":"error",
        "no-empty":"error",
        "no-invalid-regexp":"error",
        "no-irregular-whitespace":"error",
        "no-this-before-super":"error",
        "no-dupe-class-members":"error",
        "no-const-assign":"error",
        "constructor-super":"error",
        "no-async-promise-executor": "error",
        "indent": [
            2,
            4
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ]
    },
    "globals": {
        "$": true,
        "$$": true,
        "browser": true,
        "driver": true
    },
    "plugins": [
        "wdio",
        "import"
    ],
    "env": {
        "node": true,
        "jasmine": true,
        "es6": true
    }
}